<?xml version="1.0" encoding="utf-8"?>

<com.roodie.materialmovies.views.custom_views.MovieDetailCardLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="@dimen/show_detail_season_item_height"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/card_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/spacing_minor"
        android:paddingBottom="@dimen/spacing_minor"
        android:orientation="horizontal"
        android:divider="?android:dividerHorizontal"
        android:showDividers="middle" />

</HorizontalScrollView>

</com.roodie.materialmovies.views.custom_views.MovieDetailCardLayout>