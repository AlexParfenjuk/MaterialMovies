<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge"
        />

    <ProgressBar
        android:id="@+id/secondary_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        style="?android:attr/progressBarStyleHorizontal"
        />

    <FrameLayout
        android:id="@+id/conteiner"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


    <com.roodie.materialmovies.views.custom_views.MMoviesTextView
        android:id="@+id/empty_text_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="@dimen/spacing_major"
       />

        <com.roodie.materialmovies.views.custom_views.AutofitRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clipToPadding="false"
            android:columnWidth="@dimen/movie_grid_item_width"
            >

        </com.roodie.materialmovies.views.custom_views.AutofitRecyclerView>
    </FrameLayout>


</FrameLayout>