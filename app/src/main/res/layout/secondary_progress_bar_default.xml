<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
        android:layout_centerHorizontal="true"
        android:id="@+id/secondary_progress_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:spb_color="@color/mm_white_1"
        app:spb_stroke_width="4.0dip"
        app:spb_stroke_separator_length="4.0dip"
        app:spb_sections_count="2" app:spb_speed="1.7"
        app:spb_progressiveStart_speed="2.0"
        app:spb_interpolator="spb_interpolator_accelerate"
        app:spb_mirror_mode="true"
        app:spb_progressiveStart_activated="true" />

</FrameLayout>