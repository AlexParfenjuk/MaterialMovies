<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical">



    <com.roodie.materialmovies.views.custom_views.AutofitTextView
        android:id="@+id/textview_tagline"
        style="@style/Widget.MMovies.Movie.Detail.Tagline"
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_major"
   />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_major"
        android:paddingBottom="@dimen/title_summary_item_padding_bottom"
        android:layout_marginBottom="@dimen/spacing_minor"
        android:layout_marginLeft="@dimen/spacing_minor"
        android:layout_marginRight="@dimen/spacing_minor"
        android:background="@color/light_gray">

        <com.roodie.materialmovies.views.custom_views.MMoviesImageView
            android:id="@+id/imageview_poster"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/movie_detail_poster_width"
            android:layout_height="@dimen/movie_detail_poster_height"
            android:layout_marginLeft="4.0dip"
            android:layout_marginRight="4.0dip"
            android:cropToPadding="true"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginRight="8.0dip"
            android:layout_weight="1.0">

            <include layout="@layout/include_rating_bar" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>