<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_content_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?mmBackgroundColorSecondary"
        app:cardPreventCornerOverlap="false"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.roodie.materialmovies.views.custom_views.MMoviesImageView
                android:id="@+id/imageview_poster"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_item_image_size"
                android:scaleType="fitCenter"
                />

            <include layout="@layout/item_grid_3line"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>