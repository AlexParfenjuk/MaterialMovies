<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="24.0dip"
    android:paddingLeft="16.0dip"
    android:paddingRight="16.0dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip" android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="vertical">

        <com.roodie.materialmovies.views.custom_views.RatingBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rating_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20.0dip"
            android:gravity="center">

        </com.roodie.materialmovies.views.custom_views.RatingBarLayout>

        <Button
            android:id="@+id/airs_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.0dip"
            android:visibility="gone"
            android:filterTouchesWhenObscured="false"
            style="@style/pasteConfigButtonStyleInfoSmall" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/header_info_page_margin"
        android:layout_marginRight="@dimen/header_info_page_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/air_date"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableLeft="@drawable/calendar_light_grey"
            android:drawablePadding="5.0dip"
            android:gravity="bottom"
            android:textColor="@color/mm_white_40"
            android:text="@string/unknown_default"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/duration"
            android:drawablePadding="5.0dip"
            android:textColor="@color/mm_white_40"
            android:text="@string/unknown_default"
            android:gravity="bottom"
            android:textSize="12.0sp" />
    </LinearLayout>
</LinearLayout>