<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false">

                <com.roodie.materialmovies.views.custom_views.MMoviesImageView
                    android:id="@+id/tv_poster"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/movie_detail_fanart_height"
                    android:scaleType="centerCrop"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax" />


                <RelativeLayout
                    android:id="@+id/summary_root"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageview_fanart"
                    android:layout_marginTop="0dip"
                    android:fitsSystemWindows="true"
                    android:paddingBottom="20.0dip">

                    <LinearLayout
                        android:id="@+id/title_root"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/thumb"
                            android:layout_width="@dimen/season_poster_width"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/season_poster_margin"
                            android:layout_marginRight="@dimen/season_poster_margin" />


                        <include
                            android:id="@+id/header_info"
                            layout="@layout/item_season_header"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/season_header_margin_top"
                            android:layout_toRightOf="@id/thumb" />


                    </LinearLayout>


                </RelativeLayout>

                <com.roodie.materialmovies.views.custom_views.MMoviesImageView
                    android:id="@+id/season_poster"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/season_poster_width"
                    android:layout_height="@dimen/season_poster_height"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="174.0dip"
                    android:cropToPadding="true"
                    android:scaleType="fitXY" />


</RelativeLayout>