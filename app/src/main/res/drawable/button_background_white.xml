<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <inset android:insetLeft="@dimen/button_inset_horizontal" android:insetRight="@dimen/button_inset_horizontal" android:insetTop="@dimen/button_inset_vertical" android:insetBottom="@dimen/button_inset_vertical">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/control_corner" />
                <solid android:color="@color/mm_neutral_200" />
                <padding android:left="@dimen/button_padding_horizontal" android:top="@dimen/button_padding_vertical" android:right="@dimen/button_padding_horizontal" android:bottom="@dimen/button_padding_vertical" />
            </shape>
        </inset>
    </item>
    <item android:state_focused="true">
        <inset android:insetLeft="@dimen/button_inset_horizontal" android:insetRight="@dimen/button_inset_horizontal" android:insetTop="@dimen/button_inset_vertical" android:insetBottom="@dimen/button_inset_vertical">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/control_corner" />
                <solid android:color="@color/mm_neutral_200" />
                <padding android:left="@dimen/button_padding_horizontal" android:top="@dimen/button_padding_vertical" android:right="@dimen/button_padding_horizontal" android:bottom="@dimen/button_padding_vertical" />
            </shape>
        </inset>
    </item>
    <item>
        <inset android:insetLeft="@dimen/button_inset_horizontal" android:insetRight="@dimen/button_inset_horizontal" android:insetTop="@dimen/button_inset_vertical" android:insetBottom="@dimen/button_inset_vertical">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/control_corner" />
                <solid android:color="@color/mm_white_1" />
                <padding android:left="@dimen/button_padding_horizontal" android:top="@dimen/button_padding_vertical" android:right="@dimen/button_padding_horizontal" android:bottom="@dimen/button_padding_vertical" />
            </shape>
        </inset>
    </item>
</selector>